<h2 class="home">Articles</h2>
<nav>
	<ul class="clean">
		<?php foreach ($articles AS $article): ?>
			<li>
				<span class="date"><?php echo $article['year']; ?>-<?php echo $article['month']; ?>-<?php echo $article['day']; ?></span> - 
				<a href="<?php echo URL::to(); ?><?php echo $article['link']; ?>"><?php echo Str::limit(Str::title($article['title']),50); ?></a>
			</li>
		<?php endforeach; ?>
	</ul>
</nav>
<?php endif; ?>